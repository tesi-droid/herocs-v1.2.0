{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "customTemplates": [],
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    },
    "color": {
      "custom": true,
      "customDuotone": true,
      "customGradient": true,
      "defaultGradients": false,
      "defaultPalette": false,
      "palette": [
        {
          "name": "Viola Primary",
          "slug": "primary",
          "color": "#7c3aed"
        },
        {
          "name": "Fucsia Secondary",
          "slug": "secondary",
          "color": "#ec4899"
        },
        {
          "name": "Rosa Light",
          "slug": "rosa-light",
          "color": "#f5a4d8"
        },
        {
          "name": "Blu Accent",
          "slug": "accent",
          "color": "#3b82f6"
        },
        {
          "name": "Dark",
          "slug": "dark",
          "color": "#1e293b"
        },
        {
          "name": "Gray",
          "slug": "gray",
          "color": "#64748b"
        },
        {
          "name": "Light",
          "slug": "light",
          "color": "#f1f5f9"
        },
        {
          "name": "White",
          "slug": "white",
          "color": "#ffffff"
        }
      ],
      "gradients": [
        {
          "name": "Hero Gradient",
          "slug": "hero-gradient",
          "gradient": "linear-gradient(135deg, #7c3aed 0%, #ec4899 50%, #3b82f6 100%)"
        },
        {
          "name": "Viola to Fucsia",
          "slug": "primary-gradient",
          "gradient": "linear-gradient(135deg, #7c3aed 0%, #ec4899 100%)"
        },
        {
          "name": "Fucsia to Blu",
          "slug": "secondary-gradient",
          "gradient": "linear-gradient(135deg, #ec4899 0%, #3b82f6 100%)"
        },
        {
          "name": "Rosa to Viola",
          "slug": "accent-gradient",
          "gradient": "linear-gradient(135deg, #f5a4d8 0%, #7c3aed 100%)"
        }
      ]
    },
    "typography": {
      "customFontSize": true,
      "fontFamilies": [
        {
          "name": "Inter",
          "slug": "primary",
          "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
          "fontDisplay": "swap",
          "fontFace": [
            {
              "fontFamily": "Inter",
              "fontWeight": "400 700",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700"]
            }
          ]
        },
        {
          "name": "Poppins",
          "slug": "secondary",
          "fontFamily": "'Poppins', sans-serif",
          "fontDisplay": "swap",
          "fontFace": [
            {
              "fontFamily": "Poppins",
              "fontWeight": "600 800",
              "fontStyle": "normal",
              "src": ["https://fonts.googleapis.com/css2?family=Poppins:wght@600;700;800"]
            }
          ]
        },
        {
          "name": "Fahkwang",
          "slug": "fahkwang",
          "fontFamily": "'Fahkwang', -apple-system, BlinkMacSystemFont, sans-serif",
          "fontDisplay": "swap",
          "fontFace": [
            {
              "fontFamily": "Fahkwang",
              "fontWeight": "200 900",
              "fontStyle": "normal",
              "src": ["https://fonts.googleapis.com/css2?family=Fahkwang:wght@200;300;400;500;600;700;800;900"]
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "name": "Small",
          "slug": "small",
          "size": "0.875rem"
        },
        {
          "name": "Medium",
          "slug": "medium",
          "size": "1rem"
        },
        {
          "name": "Large",
          "slug": "large",
          "size": "1.5rem"
        },
        {
          "name": "Extra Large",
          "slug": "x-large",
          "size": "2rem"
        },
        {
          "name": "2XL",
          "slug": "2xl",
          "size": "2.5rem"
        },
        {
          "name": "3XL",
          "slug": "3xl",
          "size": "3rem"
        }
      ]
    },
    "spacing": {
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--cs-font-primary, 'Inter', sans-serif)",
      "fontSize": "1rem",
      "lineHeight": 1.6
    },
    "color": {
      "background": "#ffffff",
      "text": "#1e293b"
    }
  }
}
